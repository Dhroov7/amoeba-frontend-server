<header>
    <nav class="main-nav">
        <div class="nav-left">
            <span class="logo-parent"></span>
        </div>
        <div class="nav-right">
            <ul class="nav-list">
                <li class="nav-items pointer">
                    <a href="/">Home</a>
                </li>
                <li class="nav-items pointer">
                    <a href="/courses">All Courses</a>
                </li>
            </ul>
        </div>
    </nav>
</header>
<h1 class="home-heading">Coding Blocks Online</h1>

<div class="grid-background">
  <div class="grid row">
    <div class="classroom-container row">
      <div class="classroom-header-box col-md-12 col-sm-12 col-xs-12">
        <div class="classroom-header row">
          <div class="classroom-image col-md-2 col-xs-2 col-sm-2">
            <img src="{{course.logo}}" alt="course logo">
          </div>
          <h1 class="classroom-text col-md-10 col-xs-10 col-sm-10">
            {{course.title}}
          </h1>
        </div>
        <h2 class="classroom-para">
          {{course.subtitle}}
        </h2>
        <br>
        <div class="para">
          <span class="key">Mentor : </span>
            {{#each course.instructors as |instructor|}}
               {{instructor.name}}
            {{/each}}
        </div>
        <br><br>
        <div class="heading-u">
          Summary
        </div>
        <div class="para summary">
          {{course.summary}}
        </div>
        <br><br>
        
        <div class="heading-u">
          What will you learn
        </div>
        {{#with course}}
          {{#each runs as |run|}}
            {{#ifCond ../../epoch '<' run.start}}
                    <h3> Batch Number - {{run.name}}</h3>
                    <div>{{run.description}}</div>
                    <div>Batch Starts: {{formatEpochDate run.start}}</div>
                    <div>Batch Ends: {{formatEpochDate run.end}}</div>
                    <div>Enrollment Starts: {{formatEpochDate run.enrollment-start}}</div>
                    <div>Enrollment Ends: {{formatEpochDate run.enrollment-end}}</div>
                    <div>Price: â‚¹ {{run.price}}</div>
                    <ul>
                    {{#each run.sections as |section|}}
                        <li>
                            {{section.name}}
                            <ul>
                            {{#each section.contents as |content|}}
                                <li>
                                {{lecture.name}}
                                </li>
                            {{/each}}
                            </ul>
                        </li>
                    {{/each}}
                    </ul>
            {{/ifCond}}
        {{/each}}
      {{/with}}
      <br><br>
      <div class="heading-u">
        About Instructors
      </div>
      <div class="row no-gutters">
        {{#each course.instructors as |instructor|}}
          <div class="col-md-6 col-sm-12">
            <div class="img-desc row no-gutters">
              <div class="col-3">
                <div class="img-container">
                  <div class="round-img">
                    <img src="{{instructor.photo}}" alt="photo of {{instructor.name}}">
                  </div>
                </div>
              </div>
              <div class="description col-8">
                <div class="heading-d">
                  <div class="main-h">
                    {{instructor.name}}
                  </div>
                  <div class="sub-h">
                    Mentor, Coding Blocks
                  </div>
                </div>
                <div class="classroom-para">
                  {{instructor.description}}
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
 </div>
</div>

<div class="grid-background">
  <div class="red heading">
      <p>Recommended Courses</p>
  </div>
  <div class="grid row">
      {{#each recommendedCourses as |course|}}
          <div class="card-layout col-md-4 col-sm-6">
              <div class="card o-layout-card o-course-card h-100">
                  <div class="header">
                      <h1 class="card-heading o-text-card">
                          {{#if slug}}
                              <a href="courses/{{slug}}">{{title}}</a>
                          {{else}}
                              <a href="courses/{{id}}">{{title}}</a>
                          {{/if}}
                      </h1>
                      <h2 class="card-text">
                          {{subtitle}}
                      </h2>
                      <p class="card-text card-body">
                          {{summary}}
                      </p>
                  </div>
                  <div class="row no-gutters align-items-center">
                      <div class="card-mentor col-12 col-sm-8 col-md-12">
                          <div class="card-mentor-image">
                            {{#each course.instructors as |instructor index|}}
                              {{#ifCond index '<' 3}}
                                <img class="card-mentors" src="{{instructor.photo}}">
                              {{/ifCond}}
                            {{/each}}
                          </div>
                          <div class="card-mentor-text">
                              <span>Instructors</span>
                              <div class="card-mentor-name">
                                  {{#each instructors as |instructor|}}
                                      <h2>{{instructor.name}}</h2>
                                      <div class="card-text card-body">
                                          {{{mdToHtml instructor.description}}}
                                      </div>
                                  {{/each}}
                              </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      {{/each}}
  </div>
</div>
